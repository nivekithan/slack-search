{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es2018",
    "isolatedModules": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src", "scripts", "test"],
  "exclude": ["node_modules"]
}
